name: Deploy to EKS

on:
  push:
    branches:
      - main  # Change this to your main branch name

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Configure AWS CLI
        uses: aws-actions/configure-aws-credentials@v1
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY}}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: us-west-2  # 

      - name: Login to Amazon ECR
        id: login-ecr
        uses: aws-actions/amazon-ecr-login@v1

      - name: Deploy to EKS
        id: deploy-eks
        uses: aws/eks@v1
        with:
          eks-cluster-name: saroproject  #
          commands: |
            kubectl apply -f path/to/k8s/deployment.yaml  # Replace with the path to your Kubernetes deployment file
            kubectl apply -f path/to/k8s/service.yaml     # Replace with the path to your Kubernetes service file
